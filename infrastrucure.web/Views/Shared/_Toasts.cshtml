@{
    var message = TempData["ToastMessage"] as string;
    var type = TempData["ToastType"] as string ?? "info";
    var toastClasses = type switch
    {
        "success" => "text-bg-success",
        "warning" => "text-bg-warning",
        "danger" => "text-bg-danger",
        _ => "text-bg-info"
    };
}

@if (!string.IsNullOrEmpty(message))
{
    <div id="toast-container" class="toast-container position-fixed">
        <div class="toast align-items-center @toastClasses show" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    @message
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>
    <script>
        const toastEl = document.querySelector('#toast-container .toast');
        if (toastEl) {
            const toast = new bootstrap.Toast(toastEl, { delay: 4000 });
            toast.show();
        }
    </script>
}
