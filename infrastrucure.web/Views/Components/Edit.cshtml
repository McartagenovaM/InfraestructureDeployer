@model ComponentUpdateDto
@{
    ViewData["Title"] = "Edit Component";
    var environmentOptions = (string[])ViewData["EnvironmentOptions"]!;
    var typeOptions = (string[])ViewData["TypeOptions"]!;
    var statusOptions = (string[])ViewData["StatusOptions"]!;
    var componentId = (Guid)ViewData["ComponentId"]!;
    var createdUtc = ViewData["CreatedUtc"] as DateTime?;
    var updatedUtc = ViewData["UpdatedUtc"] as DateTime?;
}

<h1 class="h3 mb-4">Edit Component</h1>

<form asp-action="Edit" asp-route-id="@componentId" method="post" class="card shadow-sm" data-loading-form="true">
    @Html.AntiForgeryToken()
    <div class="card-body">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
        <div class="row g-3">
            <div class="col-12 col-lg-6">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12 col-lg-6">
                <div class="mb-3">
                    <label asp-for="Type" class="form-label"></label>
                    <select asp-for="Type" class="form-select">
                        @foreach (var option in typeOptions)
                        {
                            <option value="@option">@option.ToUpperInvariant()</option>
                        }
                    </select>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12 col-lg-6">
                <div class="mb-3">
                    <label asp-for="Environment" class="form-label"></label>
                    <select asp-for="Environment" class="form-select">
                        @foreach (var option in environmentOptions)
                        {
                            <option value="@option">@option.ToUpperInvariant()</option>
                        }
                    </select>
                    <span asp-validation-for="Environment" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12 col-lg-6">
                <div class="mb-3">
                    <label asp-for="Status" class="form-label"></label>
                    <select asp-for="Status" class="form-select">
                        @foreach (var option in statusOptions)
                        {
                            <option value="@option">@option.ToUpperInvariant()</option>
                        }
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row g-2 text-muted small">
            <div class="col-12 col-lg-6">
                <strong>Created (UTC):</strong> @createdUtc?.ToString("yyyy-MM-dd HH:mm")
            </div>
            <div class="col-12 col-lg-6">
                <strong>Updated (UTC):</strong> @(updatedUtc?.ToString("yyyy-MM-dd HH:mm") ?? "â€”")
            </div>
        </div>
    </div>
    <div class="card-footer d-flex justify-content-end gap-2">
        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
        <button type="submit" class="btn btn-primary" data-loading-button="true">
            <span class="spinner-border spinner-border-sm d-none" aria-hidden="true"></span>
            <span class="visually-hidden">Processing...</span>
            <i class="fa-solid fa-floppy-disk me-2"></i>Save Changes
        </button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
